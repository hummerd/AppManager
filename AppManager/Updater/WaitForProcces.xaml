<Window x:Class="Updater.WaitForProcces"
   xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
   xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
   Height="278" Width="290"
	MinHeight="150" MinWidth="250"
	WindowStartupLocation="CenterScreen">
    <Grid>
		<Grid.RowDefinitions>
			<RowDefinition
				Height="*" />
			<RowDefinition
				Height="44" />
		</Grid.RowDefinitions>
		<ListBox
			Margin="12,50,12,10"
			Name="LBProccesses" />
		<TextBlock
			Margin="12,11,12,0"
			Name="LblMessage"
			TextWrapping="Wrap" 
			Height="33" 
			VerticalAlignment="Top">Proccesses</TextBlock>
		<Button
			Name="BtnRetry"
			Grid.Row="1"
			Margin="0,8,98,8"
			Content="Retry"
			HorizontalAlignment="Right"
			Width="80"
			Click="BtnRetry_Click" />
		<Button
			Name="BtnCancel"
			Grid.Row="1"
			Margin="0,8,12,8"
			Width="80"
			Content="Cancel"
			HorizontalAlignment="Right"
			Click="BtnNo_Click" />
	</Grid>
</Window>
