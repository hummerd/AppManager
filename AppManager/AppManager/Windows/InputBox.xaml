<Window x:Class="AppManager.Windows.InputBox"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:am="clr-namespace:AppManager"
    Title="InputBox" Height="156" Width="367" ResizeMode="NoResize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="44" />
        </Grid.RowDefinitions>
        <Button 
			Content="{Binding Source={x:Static am:Strings.CANCEL}}"
            HorizontalAlignment="Right" 
			Margin="0,8,8,8" 
			Name="BtnCancel" 
            Width="80" 
			Grid.Row="1" Click="BtnCancel_Click" />
        <Button 
			Content="{Binding Source={x:Static am:Strings.OK}}" 
            Margin="0,8,94,8"
			Name="BtnOk"
			HorizontalAlignment="Right" 
			Width="80" 
            Grid.Row="1" Click="BtnOk_Click" />
        <TextBox 
            Margin="12,12,12,0" 
            Name="TxtInput" 
            Height="24" 
            VerticalAlignment="Top" 
            HorizontalContentAlignment="Stretch" />
    </Grid>
</Window>
