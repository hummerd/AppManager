<Window x:Class="AppManager.Windows.Settings"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	 xmlns:am="clr-namespace:AppManager"
    Title="{Binding Source={x:Static am:Strings.SETTINGS}}" 
	 Height="268" Width="310" 
	 Icon="/AppManager;component/Resources/Window.png" 
	 WindowStartupLocation="CenterScreen" 
	 ShowInTaskbar="False" 
	 MinWidth="295" 
	 MinHeight="200">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="44" />
        </Grid.RowDefinitions>
        <CheckBox 
			  Content="{Binding Source={x:Static am:Strings.AUTO_START}}"
			  Name="ChkAutoStart" 
			  Height="16" 
			  Margin="12,12,0,0" 
			  VerticalAlignment="Top" 
			  HorizontalAlignment="Left" 
			  Width="120.071" />
        <Button 
			  Content="{Binding Source={x:Static am:Strings.CANCEL}}" HorizontalAlignment="Right" 
			  Margin="0,8,8,8" 
			  Name="BtnCancel" Width="80" 
			  Click="BtnCancel_Click" Grid.Row="1" />
        <Button 
			  Content="{Binding Source={x:Static am:Strings.OK}}" 
              Margin="0,8,94,8" 
			  Name="BtnOk" Click="BtnOk_Click" 
			  HorizontalAlignment="Right" 
			  Width="80" Grid.Row="1" />
        <Button 
            Content="{Binding Source={x:Static am:Strings.OPEN_APP_DATA}}" 
            HorizontalAlignment="Left" 
            VerticalAlignment="Top" 
            Height="28" 
            Width="Auto"
            Margin="8,56,0,0" 
            Name="BtnOpenAppDataPath" 
            Click="BtnOpenAppDataPath_Click" />
        <Button 
            Content="{Binding Source={x:Static am:Strings.EDIT_APP_DATA}}" 
            Margin="8,92,0,0" 
            Name="BtnEditAppData" 
            Click="BtnEditAppData_Click" 
            HorizontalAlignment="Left" 
            Width="{Binding Path=ActualWidth, ElementName=BtnOpenAppDataPath, Mode=Default}" 
            Height="28" 
            VerticalAlignment="Top" />
        <Path Fill="#FFFFFFFF" Stretch="Fill" Stroke="#FF325BCE" Margin="8,40,8,0" VerticalAlignment="Top" Height="2" Data="M12,40L295,40" StrokeThickness="2"/>
    </Grid>
</Window>
