				</Grid>
			</TabItem>
			<TabItem
				x:Name="TabHelp"
				Header="{x:Static c:CommStr.HELP}">
				<Grid>
					<RichTextBox
						x:Name="HelpText"
						IsReadOnly="True" />
				</Grid>
			</TabItem>
		</TabControl>
		<Button
			x:Name="BtnOk"
			Grid.Row="1"
			HorizontalAlignment="Right"
			Margin="0,8,8,8"
			Width="80"
			Content="{x:Static c:CommStr.OK}" />
	</Grid>
