<Window x:Class="AppManager.Windows.SimpleSelector"
   xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
   xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:am="clr-namespace:AppManager"
   Title="SimpleSelector" 
	Height="165" Width="385"
	ShowInTaskbar="False"
	ResizeMode="NoResize"
	WindowStartupLocation="CenterOwner"
	Activated="Window_Activated"
	PreviewKeyUp="Window_PreviewKeyUp">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="*" />
			<RowDefinition Height="44" />
		</Grid.RowDefinitions>
		<Button 
			Content="{Binding Source={x:Static am:Strings.CANCEL}}"
         HorizontalAlignment="Right" 
			Margin="0,8,8,8" 
			Name="BtnCancel" 
         Width="80" 
			Grid.Row="1" Click="BtnCancel_Click" TabIndex="3" />
		<Button 
			Content="{Binding Source={x:Static am:Strings.OK}}" 
         Margin="0,8,94,8"
			Name="BtnOk"
			HorizontalAlignment="Right" 
			Width="80" 
         Grid.Row="1" 
			Click="BtnOk_Click" 
			TabIndex="2" />
		<ComboBox 
         Margin="12,12,12,0" 
         Name="CbxInput" 
         Height="24" 
         VerticalAlignment="Top" 
         HorizontalContentAlignment="Stretch" 
			TabIndex="1" IsEditable="False" />
	</Grid>
</Window>
