<Window 
	x:Class="VersionBuilder.MainWindow"
   xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
   xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
   Title="Version builder" 
	Height="227" 
	Width="545">
    <Grid>
		<Label
			HorizontalAlignment="Left" Margin="12,14,0,0" Name="LblVersionNumber" VerticalAlignment="Top">Version number</Label>
		<TextBox Height="23" Margin="113,14,310,0" Name="TxtVersion" VerticalAlignment="Top" />
		<Button
			Height="44"
			HorizontalAlignment="Left"
			Margin="12,0,0,12"
			Name="btnCreateVersion"
			VerticalAlignment="Bottom"
			Width="120"
			Click="btnCreateVersion_Click">CreateVersion</Button>
		<TextBox
			Margin="113,43,12,0"
			Name="TxtSourceDir"
			Height="23"
			VerticalAlignment="Top"
			TextDecorations="None" />
		<Label
			HorizontalAlignment="Left"
			Margin="12,43,0,0"
			Name="LblSourceLocation"
			VerticalAlignment="Top">Source location</Label>
		<TextBox
			Margin="113,72,12,0"
			Name="TxtLocation"
			TextDecorations="None"
			Height="23"
			VerticalAlignment="Top" />
		<Label
			HorizontalAlignment="Left"
			Margin="12,72,0,0"
			Name="LblVersionLocation"
			VerticalAlignment="Top">Version location</Label>
	</Grid>
</Window>
