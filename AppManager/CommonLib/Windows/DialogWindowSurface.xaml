<UserControl 
	x:Class="CommonLib.Windows.DialogWindowSurface"
   xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
   xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    >
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="*" />
			<RowDefinition Height="44" />
		</Grid.RowDefinitions>
		<ContentControl x:Name="SurfaceContent"></ContentControl>
		<Button 
			Content="CANCEL" 
			HorizontalAlignment="Right" 
			Margin="0,8,8,8" 
			x:Name="BtnCancel" 
			Width="80" 
			Click="BtnCancel_Click" 
			Grid.Row="1" />
		<Button 
			Content="OK" 
         Margin="0,8,96,8" 
			x:Name="BtnOk" 
			Click="BtnOk_Click" 
			HorizontalAlignment="Right" 
			Width="80" 
			Grid.Row="1" 
			/>
	</Grid>
</UserControl>
